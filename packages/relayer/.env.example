# GhostZK Relayer Service Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Aleo Network
ALEO_NETWORK=testnet
ALEO_API_URL=https://api.aleo.network/v1

# Relayer Account
RELAYER_PRIVATE_KEY=your_private_key_here
RELAYER_ADDRESS=your_address_here

# Gas Subsidy Configuration
MAX_GAS_SUBSIDY=1000000
DAILY_USER_SUBSIDY_LIMIT=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Database (if using one)
DB_URI=mongodb://localhost:27017/ghostzk_relayer
DB_USER=username
DB_PASS=password

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/relayer.log

# Cross-Chain Bridge (for integration)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_here

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090